    <jdbc:embedded-database id="clusterDataSource">
        <jdbc:script location="classpath:db/hsqldb-config.sql" execution="INIT"/>
        <!--db-core-hsql-schema-->
        <jdbc:script location="classpath:db/cluster-schema.sql" execution="INIT"/>
    </jdbc:embedded-database>

    <tx:annotation-driven transaction-manager="clusterTransactionManager"/>

    <bean id="clusterTransactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager"
          lazy-init="true">
        <property name="dataSource" ref="clusterDataSource"/>
    </bean>

    <!--load property files-->
    <context:property-placeholder location="classpath:prop/pride-cluster.properties" ignore-unresolvable="true"
                                  order="1"/>

</beans>
